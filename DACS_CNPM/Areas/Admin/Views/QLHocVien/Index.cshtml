@model IEnumerable<DACS_CNPM.Entities.Hoc_Vien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="content-wrapper">
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Danh sách học viên
        </div>

        <div class="card-header">
            <a class="btn btn-success" href="/Admin/QLHocVien/Create">Tạo mới học viên</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Loai_TV.Tenloai)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HoTen)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DiaChi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Sdt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NgaySinh)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.GioiTinh)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HinhAnh)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TenDn)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MatKhau)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Loai_TV.Tenloai)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HoTen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DiaChi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sdt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgaySinh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GioiTinh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HinhAnh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenDn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MatKhau)
                            </td>
                            <td>
                                <a class="btn btn-outline-info" href="/Admin/QLHocVien/Details?id=@item.MaHv">Chi tiết</a>
                                <a class="btn btn-outline-success" href="/Admin/QLHocVien/Edit?id=@item.MaHv">Sửa</a>
                                <button class="btn btn-outline-danger" href="/Admin/QLHocVien/Delete?id=@item.MaHv" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');">Xóa</button>
                                <br />
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>